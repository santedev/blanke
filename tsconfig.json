{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./js",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["ts/*.ts"],
  "exclude": ["node_modules"],
  "watch": true,
  "incremental": false
}